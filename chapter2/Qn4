#include<stdio.h>
#include<math.h>
int main()
{
    int x, y, degree;
    float r, phi, p;
    printf("Enter the co-ordinate points (x, y) : ");
    scanf("%d %d", &x, &y);
    r = sqrt(x*x + y*y);
    phi = atan(y/x);
    printf("The polar co-ordinates of (%d,%d) \t:(%f, %f)",x, y, r, phi);
    p = 3.141592;
    degree = phi * (180/p);
    printf("\nThe polar co-ordinates in Degree \t: (%f, %d)", r, degree);
    return 0;
}
